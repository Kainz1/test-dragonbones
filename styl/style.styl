    top 242px
    left 432px
    animation book-glow _time_slot ((2 * _time_slot / 5) / 2) linear infinite

.book-4-glow
    position absolute
    top 260px
    left 591px
    animation book-glow _time_slot ((3 * _time_slot / 5) / 2) linear infinite

.book-5-glow
    position absolute
    top 278px
    left 734px
    animation book-glow _time_slot ((4 * _time_slot / 5) / 2) linear infinite

@keyframes book-glow
    0%
        transform scale(1)
        filter brightness(1)
        //z-index 5
    10%
        transform scale(1.2)
        filter brightness(1.5)
        z-index 5
    20%
        transform scale(1)
        filter brightness(1)
        z-index 0
    100%
        transform scale(1)
        //z-index 0


